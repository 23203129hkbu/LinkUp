<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Top Section: Profile, Username, Follow Button, Menu -->
        <LinearLayout
            android:id="@+id/userProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <!-- Profile Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_person_24" />

            <!-- Username -->
            <TextView
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Username"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Follow Button -->
            <TextView
                android:id="@+id/btnFollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Follow"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/rounded_button_border"
                android:layout_marginEnd="8dp" />

            <!-- Menu Icon -->
            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_more_vert_24"
                android:contentDescription="Menu"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Post Media Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!-- Video Player -->
            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:visibility="gone"
                app:use_controller="true"
                app:controller_layout_id="@layout/custom_exoplayer"
                app:resize_mode="fill" />

            <!-- Image -->
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Action Buttons: Like, Comment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <!-- Like Icon and Count -->
            <ImageView
                android:id="@+id/btnLike"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Like"
                android:src="@drawable/baseline_favorite_border_24_gray" />

            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="4dp" />

            <!-- Comment Icon and Count -->
            <ImageView
                android:id="@+id/btnComment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_chat_24"
                android:contentDescription="Comment"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Post Description -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description ..........."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp" />

        <!-- Post Timestamp -->
        <TextView
            android:id="@+id/dateAndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24-03-25, 09:37"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>
</androidx.cardview.widget.CardView>